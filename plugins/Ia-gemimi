// Código mínimo para empezar
async function hablarConGemini(mensaje) {
    const url = `https://api-adonix.ultraplus.click/ai/geminiact?apikey=Adofreekey&text=${encodeURIComponent(mensaje)}&role=user`;
    
    const respuesta = await fetch(url);
    const datos = await respuesta.json();
    
    return datos.response || datos.answer || datos;
}

// Ejemplo de uso
hablarConGemini("Hola, dime algo interesante")
    .then(respuesta => console.log(respuesta))
    .catch(error => console.error("Error:", error));
